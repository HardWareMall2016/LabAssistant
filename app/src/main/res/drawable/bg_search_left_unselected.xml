<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1daaf1" />
            <stroke android:width="1dp" android:color="#1daaf1" />
            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="0dp" android:topLeftRadius="6dp" android:topRightRadius="0dp" />
        </shape>
    </item>


    <item android:state_enabled="false">
        <shape>
            <solid android:color="#1daaf1" />
            <stroke android:width="1dp" android:color="#1daaf1" />
            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="0dp" android:topLeftRadius="6dp" android:topRightRadius="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="#1daaf1" />
            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="0dp" android:topLeftRadius="6dp" android:topRightRadius="0dp" />
        </shape>
    </item>

</selector>

