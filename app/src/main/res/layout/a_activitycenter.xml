<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <net.oschina.app.v2.activity.find.view.CustomViewPager
                android:id="@+id/activitycenter_viewpager"
                android:layout_width="match_parent"
                android:layout_height="150dp" >
            </net.oschina.app.v2.activity.find.view.CustomViewPager>

            <LinearLayout
                android:id="@+id/gallery_point_linear"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_below="@+id/activitycenter_viewpager"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <net.oschina.app.v2.activity.find.view.XListView>
            </net.oschina.app.v2.activity.find.view.XListView>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>