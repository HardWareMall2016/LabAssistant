<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_8" >

        <LinearLayout style="@style/item_input_container" >

            <!-- 输入昵称 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baoming_lianxiren"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_username"
                style="@style/item_input_edittext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <LinearLayout style="@style/item_input_container" >

            <!-- 输入昵称 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baoming_shouji"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/item_input_edittext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <LinearLayout style="@style/item_input_container" >

            <!-- 输入昵称 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_email"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_email"
                style="@style/item_input_edittext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <LinearLayout style="@style/item_input_container" >

            <!-- 输入昵称 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baoming_danwei"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_danwei"
                style="@style/item_input_edittext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <Button
            android:id="@+id/subBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/main_green"
            android:text="提交"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

</ScrollView>