<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#c8eaf4">
<RelativeLayout
    android:id="@+id/more_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c8eaf4"
    android:orientation="vertical" >

    <ImageView 
        android:id="@+id/centerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
       	android:layout_marginTop="12dp"
        android:src="@drawable/guide_pagefour"
        />
    
    <TextView 
        android:id="@+id/title1"
        android:text="建设属于你的实验圈"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2fbde7"
        android:textSize="16sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:layout_below="@+id/centerImage"
        android:layout_centerHorizontal="true"
        />
    
    <Button android:id="@+id/submit"
        android:text="进入体验"
        android:layout_width="132dp"
        android:layout_height="32dp"
        android:textColor="@color/white"
        android:textSize="16sp"
         android:textStyle="bold"
        android:layout_below="@+id/title1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_guide_submit"/>
</RelativeLayout>
</ScrollView>