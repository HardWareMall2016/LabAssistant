<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/space_10"
    android:paddingRight="@dimen/space_10"
    android:paddingTop="@dimen/space_10">

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="连续签到奖励积分"
        android:textColor="@color/question_text_color"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_summary"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:text="2016-05-06"
        android:textColor="@color/main_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_summary"
        android:layout_alignParentRight="true"
        android:text="+50"
        android:textColor="@color/red"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_cur_jifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_score"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:text="现有积分:5325"
        android:textColor="@color/main_gray"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/list_divider_color" />
</RelativeLayout>