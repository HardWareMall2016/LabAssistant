<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_content_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height"
        android:minHeight="@dimen/abc_action_bar_default_height"
        android:gravity="center_vertical"
        android:background="@color/action_bar_bg"
        android:orientation="horizontal" >

        <!-- 主页 -->

        <LinearLayout
            android:id="@+id/actionbar_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:contentDescription="@null"
                android:paddingBottom="@dimen/space_5"
                android:paddingTop="@dimen/space_5"
                android:src="@drawable/home_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/comment_edittext_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/et_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_8"
                        android:layout_marginRight="@dimen/space_8"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/hint_search"
                        android:minHeight="35dp"
                        android:editable="false"
                        android:singleLine="true"
                        android:focusable="false"
                        android:textColor="@color/main_black"
                        android:textColorHint="@color/main_gray"
                        android:textSize="@dimen/text_size_16" />

                    <ImageButton
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:paddingLeft="@dimen/space_8"
                        android:paddingRight="@dimen/space_8"
                        android:src="@drawable/search_edit_top_img_2" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 等你答 -->
        <LinearLayout
            android:id="@+id/actionbar_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_tweet_ask"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_left_rounded_selected_selector"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/frame_title_tweet_ask"
                    android:textColor="@color/action_bar_bg"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_title_tweet_help"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_right_rounded_unselected_selector"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/frame_title_tweet_help"
                    android:textColor="@color/action_bar_title"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <!--
            <Button
                android:id="@+id/btn_shaixuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:background="@null"
                android:text="@string/ask_left"
                android:visibility="gone"
                android:textSize="@dimen/text_size_16"
                android:textColor="@drawable/btn_text_selector"/>

            <TextView
                android:id="@+id/tv_actionbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_left_rounded_unselected_selector"
                android:gravity="center"
                android:text="@string/ask_title"
                android:textColor="@color/action_bar_title"
                android:textSize="@dimen/text_size_18" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:paddingRight="8dp"
                android:background="@null"
                android:text="@string/ask_left"
                android:textSize="@dimen/text_size_16"
                android:visibility="invisible"/>-->
        </LinearLayout>

        <!-- 发现 -->
        <LinearLayout
            android:id="@+id/actionbar_find"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_actionbar_tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/find_title"
                android:textColor="@color/action_bar_title"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>


        <!-- 我 -->
        <RelativeLayout
            android:id="@+id/actionbar_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_fankui"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:text="意见反馈"
                android:textColor="@drawable/btn_text_selector"
                android:textSize="@dimen/text_size_16"
                android:background="@color/transparent"/>
            <!-- 个人中心 -->
            <!--<TextView
                android:id="@+id/tv_actionbar_titl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/me_title"
                android:textColor="@color/action_bar_title"
                android:textSize="@dimen/text_size_18" />-->

            <Button
                android:id="@+id/btn_setting"
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_setting_selector"
                android:gravity="right|center_vertical"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/actionbar_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/main_menu_login"
                android:textColor="@color/action_bar_title"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_below="@id/actionbar_layout"
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="54dp" >
    </FrameLayout>

    <!-- 底部导航菜单 -->

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/tab_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/layout_home"
                android:layout_width="0dp"
                android:layout_height="@dimen/navigat_height"
                android:layout_weight="1"
                android:background="@color/transparent" >

                <ImageView
                    android:id="@+id/image_home"
                    style="@style/image_bottom_navigate"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/tab_icon_home"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="首页"
                    android:textColor="@color/primarybar_txt"
                    android:textSize="12sp"
                    android:layout_below="@+id/image_home"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_question"
                android:layout_width="0dp"
                android:layout_height="@dimen/navigat_height"
                android:layout_weight="1"
                android:background="@color/transparent" >

                <ImageView
                    android:id="@+id/image_question"
                    style="@style/image_bottom_navigate"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/tab_icon_ask"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"  />

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="等你答"
                    android:textColor="@color/primarybar_txt"
                    android:textSize="12sp" 
                     android:layout_below="@+id/image_question"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <FrameLayout
               android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/layout_find"
                android:layout_width="0dp"
                android:layout_height="@dimen/navigat_height"
                android:layout_weight="1"
                android:background="@color/transparent" >

                <ImageView
                        android:id="@+id/image_find"
                        style="@style/image_bottom_navigate"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/tab_icon_find"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/iv_find_notice"
                    android:layout_width="10dip"
                    android:layout_height="10dp"
                    android:layout_alignRight="@+id/image_find"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="-4dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/message_unread_bg"
                    android:gravity="center"
                    android:minHeight="15dp"
                    android:minWidth="15dp"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_9"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="发现"
                    android:textColor="@color/primarybar_txt"
                    android:textSize="12sp"
                     android:layout_below="@+id/image_find"
                    android:layout_centerHorizontal="true"  />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_me"
                android:layout_width="0dp"
                android:layout_height="@dimen/navigat_height"
                android:layout_weight="1"
                android:background="@color/transparent" >
                 <ImageView
                        android:id="@+id/image_me"
                        style="@style/image_bottom_navigate"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/tab_icon_me"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/iv_active_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/image_me"
                    android:layout_marginRight="-6dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/message_unread_bg"
                    android:gravity="center"
                    android:minHeight="16dp"
                    android:minWidth="15dp"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_9"
                    android:visibility="gone" />
                
                <TextView
                    android:id="@+id/tv_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="我"
                    android:textColor="@color/primarybar_txt"
                    android:textSize="12sp"
                    android:layout_below="@+id/image_me"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_ask"
        android:layout_width="@dimen/navigat_height"
        android:layout_height="@dimen/navigat_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent" >

        <ImageView
            android:id="@+id/image_ask"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="top|center"
            android:background="@drawable/bottom_center" />

        <TextView
            android:id="@+id/tv_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="6.0dip"
            android:text="提问"
            android:textColor="@color/primarybar_txt"
            android:textSize="12sp" />
    </FrameLayout>

</RelativeLayout>