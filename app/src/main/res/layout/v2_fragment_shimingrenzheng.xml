<?xml version="1.0" encoding="utf-8"?>
  <!-- 实名认证 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_8" >

        <RelativeLayout
            android:id="@+id/tip_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            android:background="#F36F7A" >

            <ImageView
                android:id="@+id/tip_close"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tip_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tip_close"
                android:layout_marginRight="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:text="@string/settings_shimingrenzheng_hint"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout style="@style/item_input_container" >

            <!-- 输入昵称 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_realname"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_username"
                style="@style/item_input_edittext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <LinearLayout style="@style/item_input_container" >

            <!-- 输入昵称 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_danwei"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_danwei"
                style="@style/item_input_edittext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <LinearLayout style="@style/item_input_container" >

            <!-- 输入昵称 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_zhiwu"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_zhiwu"
                style="@style/item_input_edittext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <LinearLayout style="@style/item_input_container" >

            <!-- 输入昵称 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_phone"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/item_input_edittext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <LinearLayout style="@style/item_input_container" >

            <!-- 输入昵称 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_email"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_email"
                style="@style/item_input_edittext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <LinearLayout style="@style/item_input_container" >

            <!-- 输入昵称 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_shimingrenzheng"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16" />

            <RadioGroup
                android:id="@+id/user_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_user_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:checked="true"
                    android:text="用户"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/text_size_14" />

                <RadioButton
                    android:id="@+id/radio_user_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商户"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/text_size_14" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <RelativeLayout style="@style/item_input_container" >

            <!-- 输入昵称 -->

            <TextView
                android:id="@+id/rezhengTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_renzhengxinxi"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_16"
                android:layout_centerVertical="true" />

            <EditText
                android:id="@+id/et_renzhengxinxi"
                style="@style/item_input_edittext_relative"
                android:hint="建议填写单位或其它个性化信息"
                android:textSize="@dimen/text_size_14"
                android:layout_toRightOf="@+id/rezhengTip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_clear_danwei"
                android:maxLength="40"
                 />

            <ImageView
                android:id="@+id/iv_clear_danwei"
                style="@style/item_input_clear"
                android:contentDescription="@null"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />
            
            <TextView 
                android:id="@+id/num"
                 android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_alignParentBottom="true"
              android:textColor="@color/red"
              android:textSize="12sp"
              android:layout_marginRight="6dp"
              android:text="40"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <Button
            android:id="@+id/subBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/main_green"
            android:text="提交"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dp" >

            <!-- 输入昵称 -->

            <CheckBox
                android:id="@+id/check_box_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_12" />

            <Button
                android:id="@+id/show_renzhengshuoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="《实名认证规则说明》"
                android:textColor="@color/main_green"
                android:textSize="@dimen/text_size_12" />
            <TextView   android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和"
                 android:textSize="@dimen/text_size_12"/>
             <Button
                android:id="@+id/show_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="《用户协议》"
                android:textColor="@color/main_green"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
       
    </LinearLayout>

</ScrollView>