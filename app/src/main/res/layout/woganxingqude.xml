<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 矩形内部的布局 -->
    <LinearLayout
        android:id="@+id/ll_myanswer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:background="@drawable/rectangle_item"
        android:layout_marginTop="@dimen/space_1"
        android:orientation="horizontal" >
        <!-- 我感兴趣的图片 -->
        <ImageView 
            android:contentDescription="@null"
            android:id="@+id/iv_myinterst"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_40"
            android:src="@drawable/myinterst"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
        <!-- 我感兴趣的分类 -->
        <TextView 
            android:id="@+id/tv_myinterst_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
          	android:layout_height="@dimen/space_25"
          	android:layout_gravity="center_vertical"
          	android:hint="@string/myinterst"
          	android:textStyle="bold"
            />
        <!-- 是否感兴趣的图标 -->
        <CheckBox 
            android:contentDescription="@null"
            android:button="@null"
            android:id="@+id/iv_isIntest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/checkbox_selector"
            />
    </LinearLayout>
</LinearLayout>